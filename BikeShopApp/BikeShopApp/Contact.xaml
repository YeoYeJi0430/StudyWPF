<Page x:Class="BikeShopApp.Contact"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShopApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{DynamicResource Page_Background}"
      Title="Contact">
    
    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" Text="Sender" HorizontalAlignment="Center" Margin="15"/>
        <TextBlock Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" Text="Message" HorizontalAlignment="Center" Margin="15"/>
        <TextBox TextWrapping="Wrap" Grid.Row="0" Grid.Column="1" Margin="10" AcceptsReturn="True" AcceptsTab="True"/>
        <!--AcceptsReturn : enter시 줄바꿈 가능
            AcceptsTab : Tap가능-->
        <TextBox TextWrapping="Wrap" Grid.Row="1" Grid.Column="1" AcceptsReturn="True" AcceptsTab="True" Margin="9.6,10.4,10,0" VerticalAlignment="Top" Height="287"/>

    </Grid>
</Page>
