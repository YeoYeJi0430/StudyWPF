<Window x:Class="WpfApp1.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SecondWindow" Height="720" Width="1280">
    <StackPanel>
        <Image Height="218" Source="/media/cat.jpg"
               Stretch="Fill" Margin="487,0,569.6,0"/>
        <MediaElement Height="300" Source="cat.wmv"
                      Stretch="Fill" Width="536"
                      LoadedBehavior="Play"/>
        <!--Stretch="Fill""UniformToFill" : 사진 넓어짐, 사진 줄일때는 shift하면 비율따라 줄여짐-->
        <!--솔루션 탐색기 : 모든 파일 표시 : media 폴더 : 프로젝트에 추가-->
    </StackPanel>
</Window>
